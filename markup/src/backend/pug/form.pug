extends include/template
block content
	.catalog-fill-vendor
		.catalog-fill-vendor-pre-load-wrap
			input.catalog-fill-vendor__input(type='text', name='url', placeholder='Ссылка на подгрузку')
			svg.backend-preloader.hide(width='20', height='30')
				rect(width='10%', x='5%', rx='5%')
					animate(attributeName='height', values='20%; 70%; 20%', dur='0.7s', repeatCount='indefinite')
					animate(attributeName='y', values='40%; 15%; 40%', dur='0.7s', repeatCount='indefinite')
				rect(width='10%', x='25%', rx='5%')
					animate(attributeName='height', values='20%; 70%; 20%', dur='0.7s', begin='0.15s', repeatCount='indefinite')
					animate(attributeName='y', values='40%; 15%; 40%', dur='0.7s', begin='0.15s', repeatCount='indefinite')
				rect(width='10%', x='45%', rx='5%')
					animate(attributeName='height', values='20%; 70%; 20%', dur='0.7s', begin='0.3s', repeatCount='indefinite')
					animate(attributeName='y', values='40%; 15%; 40%', dur='0.7s', begin='0.3s', repeatCount='indefinite')
				rect(width='10%', x='65%', rx='5%')
					animate(attributeName='height', values='20%; 70%; 20%', dur='0.7s', begin='0.45s', repeatCount='indefinite')
					animate(attributeName='y', values='40%; 15%; 40%', dur='0.7s', begin='0.45s', repeatCount='indefinite')
				rect(width='10%', x='85%', rx='5%')
					animate(attributeName='height', values='20%; 70%; 20%', dur='0.7s', begin='0.6s', repeatCount='indefinite')
					animate(attributeName='y', values='40%; 15%; 40%', dur='0.7s', begin='0.6s', repeatCount='indefinite')
	ul#backendForms.nav.nav-tabs(role='tablist')
		li.nav-item
			a#home-tab.nav-link.active(data-toggle='tab', href='#home', role='tab', aria-controls='home', aria-selected='true') Основное
		li.nav-item
			a#profile-tab.nav-link(data-toggle='tab', href='#profile', role='tab', aria-controls='profile', aria-selected='false') SEO
		li.nav-item
			a#contact-tab.nav-link(data-toggle='tab', href='#contact', role='tab', aria-controls='contact', aria-selected='false') Изображения
	#backendFormsContent.tab-content
		#home.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='home-tab') ...
		#profile.tab-pane.fade(role='tabpanel', aria-labelledby='profile-tab') ...
		#contact.tab-pane.fade(role='tabpanel', aria-labelledby='contact-tab') ...
