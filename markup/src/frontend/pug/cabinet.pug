extends include/layer

block contents
    .page-container
        .page
            ul.breadcrumbs
                li.breadcrumbs__item
                    a(href="javascript:void(0);").breadcrumbs__link Главная
                li.breadcrumbs__item.active
                    a(href="javascript:void(0);").breadcrumbs__link Доставка и оплата
            h1.page__title Личный кабинет

            .page__group-row
                .page__left
                    .profile-sections.nav.nav-tabs#myTab(role='tablist')
                        a.profile-sections__item.active#home-tab(data-toggle='tab', href='#home', role='tab', aria-controls='home', aria-selected='true')
                            i.fas.fa-user
                            .profile-sections__title Настройки
                        a.profile-sections__item#profile-tab(data-toggle='tab', href='#profile', role='tab', aria-controls='profile', aria-selected='false')
                            i.fas.fa-hand-holding-usd
                            .profile-sections__title Заказы
                .page__right
                    .tab-content
                        #home.tab-pane.fade.show.active
                            | Описание товара...
                        #profile.tab-pane.fade
                            | Характеристики товара...